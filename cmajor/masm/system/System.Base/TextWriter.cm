        return writer;
    }

    public TextWriter& operator<<(TextWriter& writer, uint x)
    {
        if (writer.Error()) return writer;
        writer.Write(x);
        return writer;
    }

    public TextWriter& operator<<(TextWriter& writer, long x)
    {
        if (writer.Error()) return writer;
        writer.Write(x);
        return writer;
    }

    public TextWriter& operator<<(TextWriter& writer, ulong x)
    {
        if (writer.Error()) return writer;
        writer.Write(x);
