        protected override Result<bool> OnClipboardUpdate()
        {
            auto result = base->OnClipboardUpdate();
            if (result.Error()) return result;
            Clipboard clipboard(Handle());
            if (clipboard.IsClipboardFormatAvailable(*springDiagramElementsFormat))
            {
                auto dataResult = clipboard.GetStringData(*springDiagramElementsFormat);
                if (dataResult.Error())
                {
                    return Result<bool>(ErrorId(dataResult.GetErrorId()));
                }
                clipboardData = dataResult.Value();
                auto result = pasteMenuItem->Enable();
                if (result.Error())
                {
                    return result;
                }
            }
            return Result<bool>(true);
        }
        protected override Result<bool> OnKeyDown(KeyEventArgs& args)
        {
            auto result = base->OnKeyDown(args);
            if (result.Error()) return result;
            switch (args.key)
            {
                case Keys.controlModifier | Keys.insert:
                {
                    if (copyMenuItem->IsEnabled())
                    {
                        ClickEventArgs clickEventArgs;
                        CopyClick(clickEventArgs);
                        if (clickEventArgs.errorId != 0)
                        {
                            return Result<bool>(ErrorId(clickEventArgs.errorId));
                        }
                    }
                    args.handled = true;
                    break;
                }
                case Keys.shiftModifier | Keys.insert:
                {
                    if (pasteMenuItem->IsEnabled())
                    {
                        ClickEventArgs clickEventArgs;
                        PasteClick(clickEventArgs);
                        if (clickEventArgs.errorId != 0)
                        {
                            return Result<bool>(ErrorId(clickEventArgs.errorId));
                        }
                    }
                    args.handled = true;
                    break;
                }
                case Keys.shiftModifier | Keys.delete_:
                {
                    if (cutMenuItem->IsEnabled())
                    {
                        ClickEventArgs clickEventArgs;
                        CutClick(clickEventArgs);
                        if (clickEventArgs.errorId != 0)
                        {
                            return Result<bool>(ErrorId(clickEventArgs.errorId));
                        }
                    }
                    args.handled = true;
                    break;
                }
            }
            if (!args.handled)
            {
                auto result = canvas->KeyDown(args);
                if (result.Error()) return result;
            }
            return Result<bool>(true);
        }
        protected override Result<bool> OnSizeChanged(SizeChangedEventArgs& args)
        {
            auto result = base->OnSizeChanged(args);
            if (result.Error()) return result;
            statusBar->SetChanged();
            result = statusBar->Invalidate();
            if (result.Error()) return result;
            return Result<bool>(true);
        }
        protected override Result<bool> OnWindowClosing(bool& cancel)
        {
            Diagram* diagram = canvas->GetDiagram();
            if (diagram->IsModified())
            {
                auto messageBoxResultResult = MessageBox.Show("Current diagram is modified. Do you want to save changes?", "Diagram modified", this,
                    MessageBoxType.MB_YESNOCANCEL);
                if (messageBoxResultResult.Error())
                {
                    return Result<bool>(ErrorId(messageBoxResultResult.GetErrorId()));
                }
                MessageBoxResult result = messageBoxResultResult.Value();
                if (result == MessageBoxResult.yes)
                {
                    ClickEventArgs clickEventArgs;
                    SaveClick(clickEventArgs);
                    if (clickEventArgs.errorId != 0)
                    {
                        return Result<bool>(ErrorId(clickEventArgs.errorId));
                    }
                }
                else if (result == MessageBoxResult.cancel)
                {
                    cancel = true;
                    return Result<bool>(true);
                }
            }
            RemoveClipboardListener();
            return Result<bool>(true);
        }
        private void AddClipboardListener()
        {
            clipboardListener.Reset(new ClipboardListener(Handle()));
        }
        private void RemoveClipboardListener()
        {
            clipboardListener.Reset();
        }
        private void NewClick(ClickEventArgs& args)
        {
            Diagram* diagram = canvas->GetDiagram();
            if (diagram->IsModified())
            {
                Result<MessageBoxResult> messageBoxResultResult = MessageBox.Show("Current diagram is modified. Do you want to save changes?", "Diagram modified", this,
                    MessageBoxType.MB_YESNOCANCEL);
                if (messageBoxResultResult.Error())
                {
                    args.errorId = messageBoxResultResult.GetErrorId();
                    return;
                }
                MessageBoxResult result = messageBoxResultResult.Value();
                if (result == MessageBoxResult.yes)
                {
                    SaveClick(args);
                    if (args.errorId != 0) return;
                }
                else if (result == MessageBoxResult.cancel)
                {
                    return;
                }
            }
            UniquePtr<Diagram> newDiagram(new Diagram());
            diagramFilePath.Clear();
            auto result = filePathStatusBarItem->SetText(string());
            if (result.Error())
            {
                args.errorId = result.GetErrorId();
                return;
            }
            result = modifiedStatusBarItem->SetText(" ");
            if (result.Error())
            {
                args.errorId = result.GetErrorId();
                return;
            }
            result = canvas->SetDiagram(newDiagram.Release());
            if (result.Error())
            {
                args.errorId = result.GetErrorId();
                return;
            }
            result = canvas->GetDiagram()->ResetModified();
            if (result.Error())
            {
                args.errorId = result.GetErrorId();
                return;
            }
        }
        private void OpenClick(ClickEventArgs& args)
        {
            Diagram* diagram = canvas->GetDiagram();
            if (diagram->IsModified())
            {
                Result<MessageBoxResult> messageBoxResultResult = MessageBox.Show("Current diagram is modified. Do you want to save changes?", "Diagram modified", this,
                    MessageBoxType.MB_YESNOCANCEL);
                if (messageBoxResultResult.Error())
                {
                    args.errorId = messageBoxResultResult.GetErrorId();
                    return;
                }
                MessageBoxResult result = messageBoxResultResult.Value();
                if (result == MessageBoxResult.yes)
                {
                    SaveClick(args);
                    if (args.errorId != 0) return;
                }
                else if (result == MessageBoxResult.cancel)
                {
                    return;
                }
            }
            List<Pair<string, string>> descriptionFilterPairs;
            descriptionFilterPairs.Add(MakePair(string("spring diagram files (*.spring.xml)"), string("*.spring.xml")));
            Result<string> diagramDirectoryResult = DiagramDirectory();
            if (diagramDirectoryResult.Error())
            {
                args.errorId = diagramDirectoryResult.GetErrorId();
                return;
            }
            string initialDirectory = Rvalue(diagramDirectoryResult.Value());
            List<string> fileNames;
            string filePath;
            string currentDirectory;
            string defaultFilePath;
            Result<bool> selectedResult = System.Windows.API.GetOpenFileName(Handle(), descriptionFilterPairs, initialDirectory, defaultFilePath, ".spring.xml",
                OFN_PATHMUSTEXIST | OFN_FILEMUSTEXIST, currentDirectory, fileNames);
            if (selectedResult.Error())
            {
                args.errorId = selectedResult.GetErrorId();
                return;
            }
            bool selected = selectedResult.Value();
            if (selected)
            {
                if (!fileNames.IsEmpty())
                {
                    filePath = System.IO.Path.Combine(currentDirectory, fileNames[0]);
                }
                Result<bool> existsResult(false);
                if (!filePath.IsEmpty())
                {
                    existsResult = System.IO.File.Exists(filePath);
                }
                if (existsResult.Error())
                {
                    args.errorId = existsResult.GetErrorId();
                    return;
                }
                bool fileExists = existsResult.Value();
                if (!filePath.IsEmpty() && fileExists)
                {
                    UniquePtr<Diagram> diagram(new Diagram());
                    auto result = diagram->Load(filePath);
                    if (result.Error())
                    {
                        args.errorId = result.GetErrorId();
                        return;
                    }
                    diagramFilePath = filePath;
                    result = filePathStatusBarItem->SetText(diagramFilePath);
                    if (result.Error())
                    {
                        args.errorId = result.GetErrorId();
                        return;
                    }
                    result = modifiedStatusBarItem->SetText(" ");
                    if (result.Error())
                    {
                        args.errorId = result.GetErrorId();
                        return;
                    }
                    result = canvas->SetDiagram(diagram.Release());
                    if (result.Error())
                    {
                        args.errorId = result.GetErrorId();
                        return;
                    }
                    result = canvas->GetDiagram()->ResetModified();
                    if (result.Error())
                    {
                        args.errorId = result.GetErrorId();
                        return;
                    }
                }
                else
                {
                    int errorId = AllocateError("file path is empty or does not exist");
                    args.errorId = errorId;
                    return;
                }
            }
        }
        private void SaveClick(ClickEventArgs& args)
        {
            Diagram* diagram = canvas->GetDiagram();
            if (diagramFilePath.IsEmpty())
            {
                SaveAsClick(args);
                if (args.errorId != 0) return;
            }
            else
            {
                auto result = diagram->Save(diagramFilePath);
                if (result.Error())
                {
                    args.errorId = result.GetErrorId();
                    return;
                }
                result = diagram->ResetModified();
                if (result.Error())
                {
                    args.errorId = result.GetErrorId();
                    return;
                }
            }
        }
        private void SaveAsClick(ClickEventArgs& args)
        {
            List<Pair<string, string>> descriptionFilterPairs;
            descriptionFilterPairs.Add(MakePair(string("spring diagram files (*.spring.xml)"), string("*.spring.xml")));
            Result<string> diagramDirectoryResult = DiagramDirectory();
            if (diagramDirectoryResult.Error())
            {
                args.errorId = diagramDirectoryResult.GetErrorId();
                return;
            }
            string initialDirectory = Rvalue(diagramDirectoryResult.Value());
            List<string> fileNames;
            string filePath;
            string currentDirectory;
            string defaultFilePath = "diagram.spring.xml";
            Result<bool> selectedResult = System.Windows.API.GetSaveFileName(Handle(), descriptionFilterPairs, initialDirectory, defaultFilePath, ".spring.xml",
                0u, currentDirectory, filePath);
            if (selectedResult.Error())
            {
                args.errorId = selectedResult.GetErrorId();
                return;
            }
            bool selected = selectedResult.Value();
            if (selected)
            {
                auto existsResult = System.IO.File.Exists(filePath);
                if (existsResult.Error())
                {
                    args.errorId = existsResult.GetErrorId();
                    return;
                }
                bool exists = existsResult.Value();
                if (exists)
                {
                    Result<MessageBoxResult> messageBoxResultResult = MessageBox.Show(
                        "File '" + filePath + "' already exists. Do you want to replace it?", "File exists", this, MessageBoxType.MB_YESNO);
                    if (messageBoxResultResult.Error())
                    {
                        args.errorId = messageBoxResultResult.GetErrorId();
                        return;
                    }
                    MessageBoxResult result = messageBoxResultResult.Value();
                    if (result != MessageBoxResult.yes)
                    {
                        return;
                    }
                }
                Diagram* diagram = canvas->GetDiagram();
                auto result = diagram->Save(filePath);
                if (result.Error())
                {
                    args.errorId = result.GetErrorId();
                    return;
                }
                diagramFilePath = filePath;
                result = filePathStatusBarItem->SetText(diagramFilePath);
                if (result.Error())
                {
                    args.errorId = result.GetErrorId();
                    return;
                }
                result = diagram->ResetModified();
                if (result.Error())
                {
                    args.errorId = result.GetErrorId();
                    return;
                }
            }
        }
