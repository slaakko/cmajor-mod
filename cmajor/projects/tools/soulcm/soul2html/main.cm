public List<ustring> GetLines(const ustring& content)
{
    List<ustring> lines;
    ustring line;
    int state = 0;
    for (uchar c : content)
    {
        switch (state)
        {
            case 0:
            {
                if (c == '\n')
                {
                    lines.Add(Rvalue(line));
                    line.Clear();
                    state = 1;
                }
                else if (c != '\r')
                {
                    line.Append(c);
                }
                break;
            }
            case 1:
            {
                if (c == '\n')
                {
                    lines.Add(Rvalue(line));
                    line.Clear();
                }
                else if (c != '\r')
                {
                    line.Append(c);
                    state = 0;
                }
                break;
            }
        }
    }
    if (state == 0)
    {
        lines.Add(Rvalue(line));
    }
    return lines;
}

