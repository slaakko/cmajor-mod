using System;

namespace Sirius.Math
{
    public inline nothrow Vector LinearInterpolateVector(const Vector& u, const Vector& v, float t)
    {
        return (1 - t) * u + t * v;
    }

    public inline nothrow float LinearInterpolateScalar(float a, float b, float t)
    {
        return (1 - t) * a + t * b;
    }

} // namespace Sirius.Math
